        "submitted": "2020/01/01 01:10:35"
      }
    },
    "inline_response_200": {
      "type": "object",
      "properties": {
        "janedoe@eng.pdn.ac.lk": {
          "$ref": "#/definitions/StaffPublications"
        }
      }
    },
    "inline_response_200_1": {
      "type": "object",
      "properties": {
        "E/99/999": {
          "$ref": "#/definitions/StudentPublications"
        }
      }
    },
    "inline_response_200_2": {
