            "facebook" : "#",
            "researchgate" : "#",
            "twitter" : "#"
          },
          "profile_page" : "https://people.ce.pdn.ac.lk/students/e99/999/"
        }
      }
    },
    "StudentList" : {
      "type" : "object",
      "properties" : {
        "url" : {
          "type" : "string",
          "format" : "uri"
        }
      },
      "example" : {
        "E/99/998" : {
          "url" : "https://api.ce.pdn.ac.lk/people/v1/students/E99/998"
        },
        "E/99/999" : {
          "url" : "https://api.ce.pdn.ac.lk/people/v1/students/E99/999"
        }
      }
    }
  },
   "host":"api.ce.pdn.ac.lk/",
   "basePath":"people/v1/"
}
